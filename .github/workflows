name: CI/CD with Docker Compose

on:
  push:
    branches:
      - main  # Runs when changes are pushed to 'main'
  pull_request:
    branches:
      - main  # Runs when a PR is opened against 'main'

jobs:
  deploy:
    runs-on: ubuntu-latest
    needs: build

    steps:
      # Checkout the latest code
      - name: Checkout code
        uses: actions/checkout@v2

      # Set up SSH key for deploying to the server
      - name: Set up SSH key
        uses: appleboy/ssh-action@v0.1.6
        with:
          host: ${{ secrets.DEPLOY_HOST }}
          username: ${{ secrets.DEPLOY_USER }}
          key: ${{ secrets.DEPLOY_SSH_KEY }}
          port: 49152
          script: |
            cd ~/workspace/APICULTURE_FULL_PROJECT
            git pull
            docker-compose down
            docker-compose build
            docker-compose up -d
